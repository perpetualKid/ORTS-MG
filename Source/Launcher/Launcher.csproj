<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Description>Open Rails Launcher</Description>
    <AssemblyTitle>Open Rails Launcher</AssemblyTitle>
    <OutputPath>..\..\Program</OutputPath>
    <RootNamespace>Orts.Launcher</RootNamespace>
    <AssemblyName>OpenRails</AssemblyName>
    <ApplicationIcon>..\Orts.ico</ApplicationIcon>
  </PropertyGroup>
  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Remove="Microsoft.NETCore.Targets" Version="3.1.0" PrivateAssets="all" />
    <PackageReference Remove="Microsoft.CodeAnalysis.CSharp" Version="3.9.0" PrivateAssets="all" />
</ItemGroup>
</Project>